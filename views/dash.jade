extends layout

block head
    style(type='text/css')
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }

block content
    include nav-logged-in
    .container-fluid
      .row-fluid
         .span3
           accordion#accordion-left
              .accordion-group
                  .accordion-heading
                      a.accordion-toggle(href="#collapseTwo", data-toggle="collapse", data-parent="#accordion-left")
                          | Dina meddelanden >>
                      .accordion-body.collapse.in#collapseTwo
                          .accordion-inner
                              ul.nav#inbox-list
         .span7
           .hero-unit
             .row-fluid
               .columnA.pull-left
                   table.table
                     //caption
                       | Rubrik
                     thead
                        h2
                            a#firstname(href='#')
                                | Förnamn
                            &nbsp;
                            a#lastname(href='#')
                                | Efternamn #{""}
                     tr
                         td
                             p
                                 | ORT
                                 br
                                 | ÅLDER
                                 br
                                 | YRKE
                                 br
                                 | FÖRETAG
                                 br
                                 | UTBILDNING
                         td
                             p
                                 a#city(href='#')
                                     | Redigera
                                 br
                                 a#age(href='#')
                                     | Redigera
                                 br
                                 a#occupation(href='#')
                                     | Redigera
                                 br
                                 a#company(href='#')
                                     | Redigera
                                 br
                                 a#education(href='#')
                                     | Redigera
               .columnB.pull-right
                 ul.thumbnails
                   li.span10.pull-right
                       //.thumbnail
                       img.img-polaroid(src='/img/empty-pic.png')
                       .caption
                            p
                              a
                                input(type="file", title="Byt bild")
           .row-fluid
             .span4
               h3
                 | Om mig
               p.lead
                 a#aboutme(href='#')
                   | Redigera
               h3
                 | Kunskaper
               p.lead
                  a#knowledge(href='#')
                    | Redigera
               h3
                 | CV
               p.lead
                   a#cv(href='#')
                    | Redigera

         .span2
            .accordion#accordion
                .accordion-group
                    .accordion-heading
                        a.accordion-toggle(href="#collapseOne", data-toggle="collapse", data-parent="#accordion")
                            | Dina vänner >>
                      .accordion-body.collapse.in#collapseOne
                        .accordion-inner
                            ul.nav
                              - for (var i in friends)
                                  li
                                   .well.well-small
                                     .row-fluid
                                       a(href="/friend?user=#{friends[i][1]}") #{friends[i][0]}
                                       .dropdown
                                           a.btn.btn-small.dropdown-toggle(data-toggle='dropdown', href='#')
                                              i.icon-trash
                                           ul.dropdown-menu(role='menu', aria-labelledby='dLabel')
                                              p Vill du ta bort
                                              h6 #{friends[i][0]} ?
                                              .row-fluid
                                                a.remove-friend.btn.btn-small(href="removeFriend",
                                                name="#{friends[i][1]}", method="POST") Ja
                                                a.btn.btn-small(href="#") Nej
                                           a.btn.btn-small(href="/friend?user=#{friends[i][1]}")
                                              i.icon-user
                               // end for
                            ul.nav
                                  li
                                    br
                                  li
                                    br
                                  li
            .result
            br


block footer
    script(src="/js/dash-editable.js")
    script(src="/js/bootstrap.file-input.js")
    script(src="/js/ajax-search.js")
    script(src="/js/ajax-dash.js")
    script(src="/js/ajax-nav-markAsRead.js")
    script(src="/js/ajax-navbar.js")
    script
        $(document).ready(function(){
           // För att ladda upp en bild
           $('input[type=file]').bootstrapFileInput();
           //$('.file-inputs').bootstrapFileInput();
        });
