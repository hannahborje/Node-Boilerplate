extends layout

block head
    style(type='text/css')
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }

block content
    include nav-logged-in
    .container-fluid
      .row-fluid
         .span3
           .well.sidebar-nav
             ul.nav.nav-list
               li.nav-header
                 | Kontrollpanel
               li
                 a(href='#myPass', data-toggle='modal') Byt lösenord >>
               li
                 a(href='#myInbox', data-toggle='modal')
                   | Inbox
                   span.badge #{1}

         include popupmsg

         .span7
           .hero-unit
             .row-fluid
               .columnA.pull-left
                   table.table
                     //caption
                       | Rubrik
                     thead
                        h2
                            a#name(href='#', data-type='text', data-url='/edit', data-title='Förnamn')
                                | #{"Förnamn"}
                            a#surname(href='#', data-type='text', data-url='/edit', data-title='Efternamn')
                                | #{"Efternamn"}
                     tr
                         td

                             p
                                 | ORT
                                 br
                                 | ÅLDER
                                 br
                                 | YRKE
                                 br
                                 | FÖRETAG
                                 br
                                 | UTBILDNING

                         td
                             p
                                 a#city(href='#', data-type='text', data-url='/edit', data-title='Välj ort',
                                 data-id="", value="staden")
                                     | Redigera #{""}
                                 br
                                 a#age(href='#', data-type='text', data-url='/edit', data-title='Ange ålder')
                                     | Redigera #{""}
                                 br
                                 a#occupation(href='#', data-type='text', data-url='/edit', data-title='Ditt yrke')
                                     | Redigera #{""}
                                 br
                                 a#company(href='#', data-type='text', data-url='/edit', data-title='Var jobbar du')
                                     | Redigera #{""}
                                 br
                                 a#education(href='#', data-type='text', data-url='/edit', data-title='Utbildning')
                                     | Redigera #{""}
               .columnB.pull-right
                 ul.thumbnails
                   li.span10
                     .thumbnail
                       img.img-polaroid(src='/img/empty-pic.png')
                       .caption
                            p
                              a
                                input(type="file", title="Byt bild")
           .row-fluid
             .span4
               h3
                 | Om mig
               p.lead
                 a#aboutme(href='#', data-type='textarea', data-url='/edit')
                   | Redigera #{""}
               h3
                 | Kunskaper
               p.lead
                  a#knowledge(href='#', data-type='textarea', data-url='/edit')
                    | Redigera #{""}
               h3
                 | CV
               p.lead
                   a#cv(href='#', data-type='textarea', data-url='/edit')
                    | Redigera #{""}

         .span2

            .accordion#accordion
                .accordion-group
                    .accordion-heading
                        a.accordion-toggle(href="#collapseOne", data-toggle="collapse", data-parent="#accordion2")
                            | Dina vänner >>
                    .accordion-body.collapse.in#collapseOne
                        .accordion-inner
                            ul.nav
                              - var lengd = 4
                              - for (var i=1; i<lengd; i++)
                                  li
                                   .well.well-small
                                     .row-fluid
                                       a(href="#") #{"Förnamn"} #{"Efternamn"} #{i}
                                       .dropdown
                                           a.btn.btn-small.dropdown-toggle(data-toggle='dropdown', href='#')
                                              i.icon-trash
                                           ul.dropdown-menu(role='menu', aria-labelledby='dLabel')
                                              p Vill du ta bort
                                              h6 #{"Förnamn Efternamn"}?
                                              .row-fluid
                                                a.btn.btn-small(href="#") Ja
                                                a.btn.btn-small(href="#") Ja
                                           a.btn.btn-small(href="#")
                                              i.icon-user
                              // end for



block footer
    script(src="/js/editable.js")
