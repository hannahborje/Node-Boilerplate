extends layout

block head
    style(type='text/css')
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }

block content
    include nav-logged-in
    .container-fluid
      .row-fluid
         .span3
            // Användarens vägg
            accordion#accordion-left
                .accordion-group
                    .accordion-heading
                        a.accordion-toggle(href="#collapseTwo", data-toggle="collapse", data-parent="#accordion-left")
                            | Vägg >>
                        .accordion-body.collapse.in#collapseTwo
                            .accordion-inner
                                ul.nav#inbox-list
         .span7
           .hero-unit
             .row-fluid
               .columnA.pull-left
                   table.table
                     //caption
                       | Rubrik
                     thead
                        h2
                                #fullname
                     tr
                         td

                             p
                                 | ORT
                                 br
                                 | ÅLDER
                                 br
                                 | YRKE
                                 br
                                 | FÖRETAG
                                 br
                                 | UTBILDNING

                         td
                                #city
                                #age
                                #occupation
                                #company
                                #education
               .columnB.pull-right
                 ul.thumbnails
                   li.span10.pull-right
                       //.thumbnail
                       img.img-polaroid(src='/img/empty-pic.png')
                       .caption
                           // TODO: Lös inline
                           .btn-group-inline
                             .row-fluid
                               .columnA.pull-left
                                 .dropdown
                                    a.btn.btn-small.dropdown-toggle(data-toggle='dropdown', href='#', id="submit-request")
                                        | #{friendtext}
                                      if (!isMe && !isFriend)
                                        ul.dropdown-menu(role='menu', aria-labelledby='dLabel')
                                            h6 Vill du skicka vänförfrågan?
                                            .btn-group.inline
                                                a#friend-request.btn.btn-small(href="#") Ja
                                                |
                                                a.btn.btn-small(href="#") Nej
                               .columnB.pull-right
                                 .dropdown
                                   if (!isMe && isFriend)
                                     a.btn.btn-small(href='#sendMsg', data-toggle='modal', id="msg-toggle")
                                        | Skriv ett meddelande
                           include popupmsg
                 br
                 .result
           .row-fluid
             .span4
               h3
                 | Om mig
               p.lead
                   #aboutme
               h3
                 | Kunskaper
               p.lead
                    #knowledge
               h3
                 | CV
               p.lead
                    #cv
         .span2
            table

block footer
    // Hemlig parameter
    div.username(style='visibility: hidden;') #{username}
    // Script
    script(src="/js/ajax-search.js")
    script(src="/js/ajax-sendMsg.js")
    script(src="/js/ajax-friend.js")
    script(src="/js/ajax-navbar.js")